{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "@types/jest"]
  },
  "include": ["lib/**/*.ts", "lib/**/*.d.ts", "lib/**/*.vue"],
}
